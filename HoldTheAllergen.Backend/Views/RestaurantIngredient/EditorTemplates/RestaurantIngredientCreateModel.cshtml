@model HoldTheAllergen.Models.RestaurantIngredientCreateModel
<form class="form-horizontal" action="@Request.RawUrl" method="POST">
    @Html.ValidationSummary(true)
    <div class="control-group">
        @Html.BootstrapLabelFor(model => model.Name)
        <div class="controls">
            @Html.TextBoxFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>
    <div class="control-group">
        @Html.BootstrapLabelFor(model => model.Description)
        <div class="controls">
            @Html.TextAreaFor(model => model.Description,new{style="height:120px;width:295px;"})
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
    <div class="control-group">
        @Html.BootstrapLabelFor(model => model.AllergenIds)
        <div class="controls checkbox-list">
            @Html.CheckBoxListFor(model=>model.AllergenIds,Model.AllergenList)
            @Html.ValidationMessageFor(model => model.AllergenIds)
        </div>
    </div>
    <div class="control-group">
        @Html.BootstrapLabelFor(model => model.CreateMenuItem)
        <div class="controls">
            @Html.CheckBoxFor(model => model.CreateMenuItem)
        </div>
    </div>
    <div class="control-group">
        @Html.BootstrapLabelFor(model => model.GroupName)
        <div class="controls">
            @Html.EditorFor(model => model.GroupName)
            @Html.ValidationMessageFor(model => model.GroupName)
        </div>
    </div>
</form>
<script>
    $(document).ready(function() {
        $('#GroupName').change(function() {
            $('#CreateMenuItem').attr('checked',($(this).val().length!==0));
        });
    });
</script>